def diagonal(matrix, row):
    diagonal_element = matrix[row][row]
    for i in range(len(matrix[row])):
        matrix[row][i] /= diagonal_element

def read(filename):
    matrix = []
    with open(filename, 'r') as file:
        for line in file:
            row = list(map(int, line.split()))
            matrix.append(row)
    return matrix

def write(matrix, filename):
    with open(filename, 'w') as file:
        for row in matrix:
            file.write(' '.join(map(str, row)) + '\n')

# Ввод данных из файла
filename = 'input.txt'
matrix = read(filename)

# Введите номер строки, которую необходимо разделить
k = int(input('Введите номер строки k: '))

# Разделение элементов k-й строки
diagonal(matrix, k-1)

# Вывод результатов в файл
output_filename = 'output.txt'
write(matrix, output_filename)
